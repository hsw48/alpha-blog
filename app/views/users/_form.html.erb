<div class="container">

	<div class="row justify-content-center">
		<div class="col-10">
			<%= render 'shared/errors', obj: @user %>
			<%= form_with(model: @user, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
				<div class="form-group row">
					<%= f.label :username, class: "col-2 col-form-label text-light" %>
					<div class="col-10">
						<%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Enter a username" %>
					</div>
				</div>
				<div class="form-group row">
					<%= f.label :email, class: "col-2 col-form-label text-light" %>
					<div class="col-10">
						<%= f.text_field :email, class: "form-control shadow rounded", placeholder: "Enter your email address" %>
					</div>
				</div>
				<div class="form-group row">
					<%= f.label :password, class: "col-2 col-form-label text-light" %>
					<div class="col-10">
						<%= f.text_field :password, class: "form-control shadow rounded", placeholder: "Enter your password" %>
					</div>
				</div>
				<div class="form-group row justify-content-center">
					<%= f.submit(@user.new_record? ? "Sign Up" : "Update profile", class: "btn btn-outline-light btn-lg") %>
				</div>
				<div class="form-group row justify-content-center" >
					<%= link_to 'Delete Profile', user_path(@user), method: :delete, class: "btn btn-danger mt-4", data: { confirm: "Are you sure?" }%>
				
				</div>
			<% end %>
		
		</div>

	</div>

	<div class="text-center">
				<%= link_to 'Cancel', articles_path %>
		</div>
</div>